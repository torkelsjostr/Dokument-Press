                            <field name="number_of_pages"/>
                            <field name="quantity"/>
                            <field name="bonus"/>
                            <field name="colour"/>
                            <field name="language_1"/>
                            <field name="language_2"/>
                            <field name="size"/>
                            <field name="distribution"/>
                            <field name="not_included_in_web_store"/>
                            <field name="marked_as_product_sold_on_commission"/>
                            <field name="date_of_arrival"/>
                            <field name="year_of_production"/>
                        </group>
                        <group>
                            <field name="average_cost"/>
